{
  "name": "@grokify/echartify",
  "version": "0.1.0",
  "description": "A non-polymorphic JSON IR for Apache ECharts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate:schema": "tsx scripts/generate-schema.ts",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "demo": "npx serve demo"
  },
  "keywords": [
    "echarts",
    "charts",
    "visualization",
    "schema",
    "zod",
    "typescript"
  ],
  "author": "John Wang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/grokify/echartify"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "echarts": "^5.6.0",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.24.0"
  }
}
